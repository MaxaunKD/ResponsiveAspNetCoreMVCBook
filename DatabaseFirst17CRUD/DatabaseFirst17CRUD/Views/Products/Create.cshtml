@model DatabaseFirst17CRUD.Models.Products

@{
    ViewData["Title"] = "เพิ่มข้อมูลสินค้าใหม่";
}

<h2>เพิ่มข้อมูลสินค้าใหม่</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="ProductName" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="ProductName" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <input asp-for="UnitPrice" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-9">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-9">
                <input type="submit" value="บันทึก" class="btn btn-default" /> 
            </div>
        </div>

    </div>
</form>

<div>
    <a asp-action="Index">กลับหน้าสินค้า</a>
</div>
