@model DatabaseFirst17CRUD.Models.Products

@{
    ViewData["Title"] = "แก้ไขข้อมูลสินค้า";
}

<h2>แก้ไขข้อมูลสินค้า</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <input type="hidden" asp-for="ProductId" />

        <label asp-for="ProductName">ชื่อสินค้า : </label>
        <div class="form-group">
            <div class="col-md-9">
                <input asp-for="ProductName" class="form-control" />
            </div>
        </div>

        <label asp-for="UnitPrice">ราคาสินค้า : </label>
        <div class="form-group">
            <div class="col-md-9">
                <input asp-for="UnitPrice" class="form-control" />
            </div>
        </div>

        <label asp-for="CategoryId">ประเภทสินค้า : </label>
        <div class="form-group">
            <div class="col-md-9">
                <select asp-for="CategoryId" class="form-Control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9">
                <input type="submit" value="บันทึก" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">กลับหน้าสินค้า</a>
</div>
